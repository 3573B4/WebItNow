    <script language="javascript" type="text/javascript">

        //if (history.forward(1)) {
        //    location.replace(history.forward(1))
        //}

        window.history.forward();
        function noBack() {
            window.history.forward();
        }

        window.onpageshow = function (evt) {
            if (evt.persisted) noBack();
        };

        function mayus(e) {
            e.value = e.value.toUpperCase();
        }

        $(document).ready(function () {
            $("input").attr("autocomplete", "off");
        });

        var idLblExpira, idLitSesionExpirada, idPnlExpira;

        window.onload = function () {
            // Esperar 30 minutos (1800000 ms)
            setTimeout(function () {
                var lblExpira = document.getElementById(idLblExpira);
                var litSesion = document.getElementById(idLitSesionExpirada);
                var pnl = document.getElementById(idPnlExpira);

                if (lblExpira && litSesion) lblExpira.innerHTML = litSesion.innerHTML;
                if (pnl) pnl.style.display = 'block';

                // Recarga automática (opcional)
                setTimeout(function () { location.reload(); }, 1800000);
            }, 1800000);
        };


    </script>

